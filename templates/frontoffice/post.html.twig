{% extends "/frontoffice/base.html.twig" %}

{% block title %}post.title{% endblock %}

{% block content %} 
    <article >
        <h2>{{ post.title }}</h2>
        <p>{{ post.text }}</p>
        <p>{{ post.createdAt | date }}</p>
        
    </article>

    <section>
        <h3>Commentaires</h3>
        {% if comments %}
            {% for comment in comments %}
                <p> {#{{ comment.id }}<br>#}
                    {{ comment.pseudo }}<br>
                    {{ comment.text }}</p>
            {% endfor %}
        {% else %}
            <h4>Aucun commentaires</h4>
        {% endif %}
    </section>
{% endblock %}
